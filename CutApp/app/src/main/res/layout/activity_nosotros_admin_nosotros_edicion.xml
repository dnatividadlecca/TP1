<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B38524"
    tools:context=".App.Nosotros.Nosotros_Admin_NosotrosEdicionActivity">

    <ScrollView

        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/scrollview1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/transparente"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.807"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="46dp">


            <TextView
                android:id="@+id/lbl_idPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ID PeluquerÃ­a"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/lbl_latitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Latitud"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/lbl_longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Longitud"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/lbl_nombrePeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lbl_nombrePeluqueria"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/txt_nombrePeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="@string/lbl_nombrePeluqueria"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nombrePeluqueria"/>

            <TextView
                android:id="@+id/lbl_direccionPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lbl_direccionPeluqueria"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/lbl_direccionPeluqueria"/>
            <EditText
                android:id="@+id/txt_direccionPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="@string/lbl_direccionPeluqueria"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@+id/lbl_direccionPeluqueria"/>

            <TextView
                android:id="@+id/lbl_telefonoPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lbl_telefonoPeluqueria"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/txt_direccionPeluqueria"/>
            <EditText
                android:id="@+id/txt_telefonoPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="@string/lbl_telefonoPeluqueria"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@+id/lbl_telefonoPeluqueria"/>

            <TextView
                android:id="@+id/lbl_horarioAtencionInicioPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lbl_horarioAtencionInicioPeluqueria"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/txt_telefonoPeluqueria"/>
            <TimePicker
                android:id="@+id/tp_horarioAtencionInicioPeluqueria"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:timePickerMode="spinner"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_horarioAtencionInicioPeluqueria"/>

            <TextView
                android:id="@+id/lbl_horarioAtencionFinPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lbl_horarioAtencionFinPeluqueria"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/tp_horarioAtencionInicioPeluqueria"/>
            <TimePicker
                android:id="@+id/tp_horarioAtencionFinPeluqueria"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:timePickerMode="spinner"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_horarioAtencionFinPeluqueria"/>

            <TextView
                android:id="@+id/lbl_descripcionPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lbl_descripcionPeluqueria"
                android:textColor="#5E394C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/txt_horarioAtencionFinPeluqueria"/>

            <EditText
                android:id="@+id/txt_descripcionPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="@string/lbl_descripcionPeluqueria"
                android:inputType="textMultiLine"
                app:layout_constraintTop_toBottomOf="@+id/lbl_descripcionPeluqueria" />

            <Button
                android:id="@+id/btn_user_registrar"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="60dp"
                android:background="#5E394C"
                android:onClick="Act_DatosPeluqueria"
                android:text="Actualizar"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>